<div class="container" style="margin-top: 25px;">
  <div class="row" >
    <a href="/dashboard" class="text-right go-back ml-auto"> &larr; Go Back</a>
  </div>
  
  <h2 class="title mt-5">Edit Post</h2><hr>
  <form class="edit-post-form">
  <div class="form-group">
    <label for="post-title">Post Title:</label>
    <input type="text" class="form-control input" name="post-title" value="{{post.title}}"  >
  </div>
  <div class="form-group">
    <label for="post-content">Post Content:</label>
    <input type="textarea" class="form-control text-area" value="{{post.post_content}}" name="post-content" >
  </div>
  
    <div class="form-group">
       Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="form-group">
  <button type="submit" class="btn btn-primary">Update Post</button>
  <button type="button" class="btn btn-danger delete-post-btn">Delete Post</button>
  </div>
</form>
  
</div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
